<script src="https://kit.fontawesome.com/4d819b3cb6.js" crossorigin="anonymous"></script>
<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', books: @books %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= image_tag @user.get_profile_image(100,100) %></td>
                    <td><%= user.name %></td>
                </tr>
            <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>