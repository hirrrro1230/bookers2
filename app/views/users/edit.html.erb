<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <h4>Image</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <h4>Introduction</h4>
  <div>
  <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"introduction"%>
  </div>
  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
        </div>
    </div>
</div>

